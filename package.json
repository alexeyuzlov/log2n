{
  "name": "webpack-sample",
  "version": "0.0.1",
  "scripts": {
    "build:dev": "npm run clean:dist && npm run webpack -- --config webpack.dev.js --progress --profile",
    "build:prod": "npm run clean:dist && npm run webpack -- --config webpack.prod.js --bail",
    "ci": "npm run lint && npm run test && npm run build:prod",
    "clean:dist": "npx rimraf -- dist",
    "lint": "npx tslint \"src/**/*.ts\"",
    "server:dev": "npm run webpack serve -- --config webpack.dev.js --progress",
    "start": "npm run server:dev",
    "test": "npx karma start",
    "test:watch": "npm run test -- --auto-watch --no-single-run",
    "webpack": "node --max_old_space_size=8192 node_modules/webpack/bin/webpack.js"
  },
  "license": "MIT",
  "dependencies": {
    "normalize.css": "8.0.1"
  },
  "devDependencies": {
    "@types/jasmine": "3.10.1",
    "autoprefixer": "10.4.0",
    "circular-dependency-plugin": "5.2.2",
    "copy-webpack-plugin": "9.0.1",
    "css-loader": "6.5.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "import-glob-loader": "1.1.0",
    "jasmine-core": "3.10.1",
    "karma": "6.3.6",
    "karma-chrome-launcher": "3.1.0",
    "karma-jasmine": "4.0.1",
    "karma-mocha-reporter": "2.2.5",
    "karma-webpack": "5.0.0",
    "mini-css-extract-plugin": "2.4.3",
    "postcss": "8.3.11",
    "postcss-loader": "6.2.0",
    "rimraf": "3.0.2",
    "sass": "1.43.4",
    "sass-loader": "12.3.0",
    "style-loader": "3.3.1",
    "ts-loader": "9.2.6",
    "tslint": "6.1.3",
    "tslint-loader": "3.5.4",
    "typescript": "4.4.4",
    "webpack": "5.61.0",
    "webpack-cli": "4.9.1",
    "webpack-dev-server": "3.11.2",
    "webpack-merge": "5.8.0"
  }
}
